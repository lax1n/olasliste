
<%if @post.errors.any?%>
    <div class="form-group">
      <div class='col-md-12'>
        <div class="alert alert-warning">
          <div class="header"><%= t("please_check_the_following") %>:</div>
          <ul class="list">
            <%@post.errors.full_messages.each do |msg| %>
                <li><%=simple_format msg%></li>
            <%end%>
          </ul>
        </div>
      </div>
    </div>
<%end%>

<div class="col-lg-7">
  <div class="hpanel">
    <div class="panel-body">
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= t("posts.headline")%></label>
        <div class="col-sm-10">
          <%=f.text_field :headline, placeholder: t("posts.headline_placeholder"), class: 'form-control input-lg m-b' %>
        </div>
      </div>
      <div class="hr-line-dashed"></div>
      <div class="form-group m-b-xl">
        <label class="col-sm-2 control-label"><%= t("posts.description") %></label>
        <div class="col-sm-10">
          <%=f.text_area :description, placeholder: t("posts.description_placeholder"), class: 'form-control input-md m-b' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= t("posts.delivery_details") %></label>
        <div class="col-sm-10">
          <%=f.text_area :delivery_details, placeholder: t("posts.delivery_details_placeholder"), class: 'form-control input-md m-b' %>
        </div>
      </div>
      <div class="hr-line-dashed"></div>
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= t("posts.privacy") %></label>
        <div class="col-sm-10">
          <label for="expedition_private">
            <%=f.check_box :show_phone_number %>
            <%= t("posts.show_phone_number") %>
          </label>
        </div>
      </div>
      <div class="hr-line-dashed"></div>
      <div class="form-group m-b-xl">
        <label class="col-sm-2 control-label"><%= t("posts.price") %></label>
        <div class="col-sm-10">
          <%= f.number_field :price, class: 'form-control input-md m-b', value: (number_with_precision(f.object.price, precision: 2) || 0) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-lg-7 col-xs-12 pull-left">
  <div class="hpanel">
    <div class="panel-body">
      <div class="form-group">
        <label class="col-sm-2 control-label"></label>

        <div class="col-sm-4">
          <button class="btn btn-brand-color" type="submit"><%= t("save_changes") %></button>
          <%=link_to t("cancel"), :back, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
</div>
