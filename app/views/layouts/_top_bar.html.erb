<div id="header">
  <nav class="navbar navbar-fixed-top top-menu">
    <div class="col-lg-12 nav-p-adjustment">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="true" aria-controls="navbar">
          <i class="fa fa-bars fa-fw"></i>
        </button>
        <div id="logo" class="light-version navbar-brand">
            <span>
              <%= link_to :posts, root_path%>
            </span>
        </div>
      </div>

      <div id="navbar" class="navbar-collapse collapse" aria-expanded="true">
        <ul class="nav navbar-nav">
          <li>
            <%=link_to :create_new_post, new_post_path %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%if current_user %>
            <li><%= link_to edit_user_path(current_user) do %><i class="fa fa-cog"></i> Settings <% end %></li>
            <li><%=link_to destroy_user_session_path, method: :delete do%><i class="fa fa-sign-out fa-lg"></i> Log out <%end%></li>
          <%else%>
              <li><%=link_to new_user_session_path do%><i class="fa fa-sign-in fa-lg"></i> Sign in <%end%></li>
          <%end%>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
