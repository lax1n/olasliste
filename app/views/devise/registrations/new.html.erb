<div class="register-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <h3><%= t('registration') %></h3>
      </div>
      <div class="hpanel">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="row">
                <div class="form-group col-lg-6">
                  <label><%= t('first_name') %></label>
                  <%= f.text_field :first_name, autofocus: true, placeholder: :first_name_placeholder, class: "form-control" %>
                </div>
                <div class="form-group col-lg-6">
                  <label><%= t('last_name') %></label>
                  <%= f.text_field :last_name, autofocus: true, placeholder: :last_name_placeholder, class: "form-control" %>
                </div>
                <div class="form-group col-lg-6">
                  <label><%= t('username') %></label>
                  <%= f.text_field :username, placeholder: :username_placeholder, class: "form-control" %>
                </div>

                <div class="form-group col-lg-6">
                  <label><%= t('email') %></label>
                  <%= f.email_field :email, placeholder: :email_placeholder, class: "form-control" %>
                </div>

                <div class="form-group col-lg-6">
                  <label><%= t('password') %></label>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "********", class: "form-control"  %>
                </div>
                <div class="form-group col-lg-6">
                  <label><%= t('repeat_password') %></label>
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "********", class: "form-control" %>
                </div>
              </div>

              <div class="text-center">
                <%= f.submit t('register'), :class => "btn btn-brand-color" %>
                <%= link_to t('cancel'), new_session_path(resource_name), class: 'btn btn-default' %>
              </div>
          <% end %>
          <hr />
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>